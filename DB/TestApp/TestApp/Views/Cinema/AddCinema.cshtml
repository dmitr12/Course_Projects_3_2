@model TestApp.Models.Cinema
@{
    ViewBag.Title = "AddCinema";
}

<h2>Добавление кинотеатра:</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            @Html.Label("Название кинотеатра: ")
            @Html.EditorFor(m => m.NameCinema)
            @Html.ValidationMessageFor(m => m.NameCinema)
            <br />
            <label class="control-label">Улица: </label>
            <input type="text" name="Street" required />
            <br />
            <label class="control-label">Номер дома: </label>
            <input type="number" name="NumberHouse" required min="1" />
            <br />
            <input type="submit" value="Добавить" />
        }
    </div>
    <div class="col-md-6">
        <div>
            @using (Ajax.BeginForm("GetAllCinemas", new AjaxOptions
            {
                UpdateTargetId = "result",
                LoadingElementId="loading",
                LoadingElementDuration=300
            }))
            {
                <input class="btn btn-primary" type="submit" value="Вывести список кинотеатров"/>
            }
            <div id="loading" style="display:none; color:red; font-weight:bold;">
                <p>Подгружение списка...</p>
            </div>
            <div id="result"></div>
        </div>
    </div>
</div>
@Scripts.Render("~/scripts/jquery-3.4.1.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
