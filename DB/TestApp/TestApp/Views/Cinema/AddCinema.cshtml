@model TestApp.Models.Cinema
@{
    ViewBag.Title = "AddCinema";
}

<h2>Добавление кинотеатра:</h2>
    <div>
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.NameCinema, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NameCinema, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NameCinema, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Улица", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("Street", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessage("Street", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Номер дома", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("NumberHouse", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessage("NumberHouse", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-1">
                        <input type="submit" value="Добавить" class="btn btn-success" />
                    </div>
                    <div class="col-md-1">
                        <a class="btn btn-default" href="~/Cinema/Index">Отмена</a>
                    </div>
                </div>
            </div>
        }
    </div>
    @Scripts.Render("~/scripts/jquery-3.4.1.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
